<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @blog.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @blog.content %>
</p>

<p>
	<strong>Tags:</strong>
	<h4>Associated Tags <%= @blog.tags.count %></h4>
	<% @blog.tags.each do |tag| %>
		<span style="background-color:gray;padding:4px;margin-right:4px;color:white">
		<%= tag.name %>
	<% end %>

</p>

<hr/>
<h2>Comments<span style="color:gray"></h2>
<%= render 'comments/form' %>
	

<hr/>
<% @blog.comments.each do |comment| %>
	<h3><%= comment.name%></h3>
	<%= comment.content %>
	<%= link_to 'Delete', comment, method: :delete, data: { confirm: 'Are you sure?' } %>
<hr/>
<% end %>

<hr/>

<%= link_to 'Edit', edit_blog_path(@blog) %> |
<%= link_to 'Back', blogs_path %>
